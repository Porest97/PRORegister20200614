@model IEnumerable<PRORegister.PRONBS.Models.DataModels.Asset>
@{
    ViewData["Title"] = "IndexSite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="badge">

    <h3>Assets - AccessPoints - SiteNumber Search</h3>



    <form asp-controller="Assets" asp-action="IndexSite">
        <p>
            Search for Sitenumber: <input type="text" name="SearchString">
            <input type="submit" value="Search" />
        </p>
    </form>
    @*<div class="alert-heading">
            <h3>Total Hours: @Model.Where(i => i.NABLogStatusId == 2).Sum(i => i.Hours)</h3>
        </div>*@
    <table class="table table-responsive-sm table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Site)</th>


                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.AssetBrand)</th>

                <th>@Html.DisplayNameFor(model => model.Model)</th>
                <th>@Html.DisplayNameFor(model => model.MACAddress)</th>

                <th>@Html.DisplayNameFor(model => model.Ethernet1LLDP)</th>
                <th>@Html.DisplayNameFor(model => model.LocalIP)</th>

                @*<th>@Html.DisplayNameFor(model => model.MtrCost)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalCost)</th>

                    <th>@Html.DisplayNameFor(model => model.WLog)</th>
                    <th>@Html.DisplayNameFor(model => model.NABLogStatus)</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(a => a.Name).Where(a => a.AssetTypeId == 1))
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Site.NoSite)</td>

                    <td> @Html.DisplayFor(modelItem => item.Name)</td>
                    <td> @Html.DisplayFor(modelItem => item.AssetBrand.AssetBrandName)</td>

                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td>@Html.DisplayFor(modelItem => item.MACAddress)</td>

                    <td>@Html.DisplayFor(modelItem => item.Ethernet1LLDP)</td>
                    <td>@Html.DisplayFor(modelItem => item.LocalIP)</td>

                    @*<td>@Html.DisplayFor(modelItem => item.MtrCost)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalCost)</td>

                        <td>@Html.DisplayFor(modelItem => item.WLog.WLNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.NABLogStatus.NABLogStatusName)</td>*@
                    @*<td>
                            <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
    @*<a class="btn btn-sm btn-success" asp-controller="Assets" asp-action="ListAssets">Back to Assets</a>*@
</div>